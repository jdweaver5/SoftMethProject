<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="drinkSmart.existingUser">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="#fff"
            android:text="What are you feeling?"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <Button
                android:layout_margin="10dp"
                android:textColor="#000"
                android:background="@drawable/buttonstyleyellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/drunk"
                android:text="I'M DRINKING A LOT"
                />  <!-- TEST BUTTON -->
            <Button
                android:layout_margin="10dp"
                android:textColor="#fff"
                android:background="@drawable/buttonstyleempty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chill night"
                android:id="@+id/chill"
                />  <!-- TEST BUTTON -->
            <Button
                android:layout_margin="10dp"
                android:textColor="#000"
                android:background="@drawable/buttonstyleyellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear Profile"
                android:id="@+id/clear"
                />  <!-- TEST BUTTON -->
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
